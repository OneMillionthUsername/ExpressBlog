<% /* error.ejs - Generische Fehlerseite */ %>
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="light dark">
    <script<% if (typeof nonce !== 'undefined') { %> nonce="<%= String(nonce) %>"<% } %>>
        (function(){
            try {
                var saved = localStorage.getItem('blog-theme');
                var dark = saved ? (saved === 'dark') : (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches);
                if (dark) document.documentElement.setAttribute('data-theme','dark');
            } catch(e) { /* no-op */ }
        })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;700&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/components.css">
    <link rel="stylesheet" href="/assets/css/theme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous">
    <title>Fehler - Sub specie aeternitatis</title>
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container-fluid header-section">
        <div class="d-flex justify-content-center align-items-center mb-2">
            <h1 class="mt-5 main-title mb-0">Ein Fehler ist aufgetreten</h1>
        </div>
        <h2 class="mt-3 sub-title">Es gab ein Problem beim Laden der Seite</h2>
        <hr class="header-divider">
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="error-page-container">
                    <div class="alert alert-danger">
                        <h3 class="alert-heading">
                            <i class="fas fa-exclamation-circle"></i>
                            Serverfehler
                        </h3>
                        <p class="mb-3">
                            <%= message || 'Es ist ein unerwarteter Fehler aufgetreten.' %>
                        </p>
                        <hr>
                        <div class="d-flex flex-column flex-sm-row justify-content-center gap-2">
                            <a href="/" class="btn btn-primary">
                                <i class="fas fa-home"></i>
                                Zur Startseite
                            </a>
                            <button onclick="window.history.back()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i>
                                Zur√ºck
                            </button>
                            <a href="javascript:window.location.reload()" class="btn btn-outline-secondary">
                                <i class="fas fa-refresh"></i>
                                Neu laden
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
</html>