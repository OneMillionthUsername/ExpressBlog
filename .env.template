# Environment Variables Template for ExpressBlog
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
HOST=0.0.0.0
DOMAIN=localhost
NODE_ENV=development

# JWT Configuration
# Generate a secure random string for production (at least 32 characters)
JWT_SECRET=your_secure_jwt_secret_key_here
TOKEN_HEADER=your_token_header_key_here

# Database Configuration
DB_HOST=localhost
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# MySQL Docker Configuration (for docker-compose)
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=your_mysql_database_name
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password

# Application Configuration
PLESK_ENV=false
JSON_BODY_LIMIT=100kb
URLENCODED_BODY_LIMIT=100kb

# AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# TINY MCE Configuration
# Get your API key from: https://www.tiny.cloud/
TINY_MCE_API_KEY=your_tiny_mce_api_key_here

# Optional: Email Configuration (if you plan to add email features)
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password

# Optional: Redis Configuration (if you plan to add caching)
# REDIS_URL=redis://localhost:6379

# Optional: Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# Optional: Security Configuration
# CORS_ORIGIN=http://localhost:3000
# SESSION_SECRET=your_session_secret_key_here

# Optional: File Upload Configuration
# UPLOAD_PATH=public/uploads
# MAX_FILE_SIZE=10485760
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
